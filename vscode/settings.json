{
    "workbench.colorTheme": "b4d08c16-a891-4186-884d-e469cba72e99",
    "editor.fontSize": 16,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "debug.allowBreakpointsEverywhere": true,
    "git.autofetch": true,
    "terminal.integrated.env.windows": {
        "PATH": "C:\\Program Files (x86)\\dotnet;${env:PATH}"
    },
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "window.commandCenter": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#040404",
        "statusBar.foreground": "#ffffff",
        "editor.background": "#040404",
        "editorGroupHeader.tabsBackground": "#040404",
        "tab.activeBackground": "#040404",
        "tab.inactiveBackground": "#040404",
        "sideBar.background": "#040404",
        "breadcrumb.background": "#040404",
        "activityBar.background": "#040404",
        "terminal.background": "#040404",
        "panel.background": "#040404",
        "titleBar.activeBackground": "#040404",
        "input.background": "#040404",
        "sideBarSectionHeader.background": "#080808",
        "quickInput.background": "#040404"
    },
    "explorer.confirmDragAndDrop": false,
    "editor.scrollbar.horizontalScrollbarSize": 4,
    "editor.scrollbar.verticalScrollbarSize": 4,
    "workbench.layoutControl.enabled": false,
    "vscode_custom_css.imports": [
        "file:///Q:/dotfiles/vscode/vscode-styles.css",
    ],
    "glassit.alpha": 235,
    "window.customTitleBarVisibility": "never",
    "window.titleBarStyle": "native",
    "custom-ui-style.electron": {
        // "frame": false,
        // For MacOS
        "roundedCorners": false,
    },
    "custom-ui-style.stylesheet": {
        ".monaco-workbench": {
            "&:not(.fullscreen)": {
                // Allow dragging on the activity-bar, status-bar, tabs-container, side-bar title...
                ".activitybar, .statusbar, .tabs-container, .sidebar .composite.title": {
                    "-webkit-app-region": "drag",

                // ...but still allow to click actions and items without dragging.
                    ".content .monaco-action-bar, .statusbar-item, .tab, .title .title-actions .action-label": {
                        "-webkit-app-region": "no-drag"
                    }
                }
            },
        },
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
}